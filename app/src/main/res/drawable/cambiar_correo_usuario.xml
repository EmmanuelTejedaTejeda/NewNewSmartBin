<!-- drawable/circle_with_edit.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Circle Background -->
    <item
        android:width="40dp"
        android:height="40dp"
        android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="@color/melon" />
        </shape>
    </item>

    <!-- Edit Icon -->
    <item
        android:drawable="@drawable/correo_icon"
        android:width="25dp"
        android:height="25dp"
        android:gravity="center" />

</layer-list>
