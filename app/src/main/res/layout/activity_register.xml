<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="30dp">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingTop="10dp">
        <TextView
            android:padding="10dp"
            android:layout_marginTop="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTRO"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:background="@drawable/backgroundwithwhiteborder" />
        <EditText
            android:id="@+id/Rusuario"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_background"
            android:textColor="@color/black"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:maxLength="20"
            android:layout_marginTop="10dp"
            android:hint="Usuario"
            android:textColorHint="@color/gris"
            android:maxLines="1"
            android:singleLine="true"
            />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="+52"
                android:gravity="center"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/Rtelefono"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_background"
                android:inputType="phone"
                android:hint="Numero de telefono"
                android:textColorHint="@color/gris"
                android:textColor="@color/black"
                android:maxLength="10"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>


        <EditText
            android:id="@+id/Rcorreo"
            android:hint="Correo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_background"
            android:textColor="@color/black"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/gris"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/contenedorContrasena"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_background"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:paddingRight="10dp">
            <EditText
                android:hint="Contraseña"
                android:id="@+id/Rcontrasena"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/transparente"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColorHint="@color/gris"/>
            <ImageButton
                android:id="@+id/showPasswordRegister"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/final_eye"
                android:layout_gravity="center" />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/contenedorContrasenaRepetida"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_background"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:paddingRight="10dp">
            <EditText
                android:hint="Confirmar contraseña"
                android:id="@+id/Rcontrasenarepetida"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/transparente"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColorHint="@color/gris" />
            <ImageButton
                android:id="@+id/showPasswordRegisterRepetida"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/final_eye"
                android:layout_gravity="center" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0">
        <Button
            android:id="@+id/Rregistro"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="REGISTRARSE"
            android:backgroundTint="@color/verde"
            android:textColor="@color/white" />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="¿Ya tienes una cuenta? "
                android:gravity="center"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/subrayado_ingresar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Iniciar sesion"
                android:textColor="@color/verde"
                android:layout_gravity="center"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/iniciarsesion"
            android:padding="10dp">
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/google"
                android:layout_gravity="center_vertical"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="REGISTRATE CON GOOGLE"
                android:background="@color/transparente"
                android:textColor="@color/black"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/iniciarsesion"
            android:padding="10dp"
            android:layout_marginTop="10dp">
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/facebook"
                android:layout_gravity="center_vertical"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="REGISTRO CON FACEBOOK"
                android:background="@color/transparente"
                android:textColor="@color/black"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>